{
  "name": "visual-school",
  "version": "1.0.0",
  "description": "Learn programming online visualy",
  "main": "index.ts",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack/webpack-development.js",
    "postinstall": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "webpack && npm start",
    "build": "better-npm-run build",
    "build:server": "echo \"Error: no server build script specified\"",
    "build:client": "webpack --config ./config/webpack/webpack-production.js --progress --profile --bail",
    "docs": "apidoc -e \"(node_modules|public)\" -o docs/apidoc",
    "clean": "rimraf dist/* && rimraf server.js"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && npm run build:server && npm run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/visual-space/visual-school/issues"
  },
  "homepage": "https://visualschool.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/visual-space/visual-school.git"
  },
  "keywords": [
    "learn",
    "programming",
    "tutorials"
  ],
  "author": "Adrian Moisa",
  "license": "ISC",
  "dependencies": {
    "blingdotjs": "gist:7d867cda127e64d38f28",
    "brace": "^0.10.0",
    "font-awesome": "^4.7.0",
    "redux": "^3.6.0",
    "redux-observable": "^0.14.1",
    "reselect": "^3.0.1",
    "rxjs": "^5.2.0",
    "simplebar": "^2.4.4"
  },
  "devDependencies": {
    "@types/redux": "^3.6.0",
    "@types/rx": "^4.1.1",
    "@types/webpack": "^2.2.11",
    "@types/webpack-dev-middleware": "^1.9.1",
    "@types/webpack-env": "^1.13.0",
    "@types/webpack-hot-middleware": "^2.15.0",
    "awesome-typescript-loader": "^3.1.2",
    "better-npm-run": "0.0.14",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.27.1",
    "debug": "^2.6.1",
    "file-loader": "^0.10.1",
    "html-webpack-plugin": "^2.28.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.5.0",
    "redux-devtools": "^3.3.2",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "script-ext-html-webpack-plugin": "^1.7.1",
    "script-loader": "^0.7.2",
    "simplebar": "^2.4.4",
    "source-map-loader": "^0.2.0",
    "style-loader": "^0.13.2",
